{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "patch"
      ],
      "route": "{ContainerID}/editCustomer"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputDocument",
      "databaseName": "3d-web-db",
      "collectionName": "{ContainerID}",
      "connectionStringSetting": "3dwebdb_DOCUMENTDB",
      "partitionKey": "undefined",
      "sqlQuery": "SELECT * FROM c where c.id = 'customers'"
  },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "3d-web-db",
      "collectionName": "{ContainerID}",
      "createIfNotExists": true,
      "connectionStringSetting": "3dwebdb_DOCUMENTDB",
      "partitionKey": "undefined",
      "sqlQuery": "UPDATE customerlist SET Ytunnus={Ytunnus}, asiakkaanNimi={asiakkaanNmi}, Postiosoite={Postiosoite}, Postinumero={Postinumero}, Toimipaikka={Toimipaikka} WHERE customerlist.id={id}"
    }
  ],
  "scriptFile": "../dist/edit-customer/index.js"
}
