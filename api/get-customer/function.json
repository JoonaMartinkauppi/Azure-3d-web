{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ],
      "route": "{ContainerID}/getCustomer"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputDocument",
      "databaseName": "3d-web-db",
      "collectionName": "{ContainerID}",
      "connectionStringSetting": "3dwebdb_DOCUMENTDB",
      "partitionKey": "undefined",
      "sqlQuery": "SELECT * FROM customerlist where customerlist.id = {id}"
    }
  ],
  "scriptFile": "../dist/get-customer/index.js"
}
